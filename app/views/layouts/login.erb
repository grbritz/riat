<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<h1>Login</h1>
			<%= form_tag({ action: @action, controller: @controller, method: :post}) do %>
				<div class="form-group">
					<%= label_tag(:email, 'Email Address:') %>
					<%= text_field_tag(:email, {:class => 'form-control'}) %>
				</div>
			<% end %>
		</div>
	</div>
</div>